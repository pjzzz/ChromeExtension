
{
    "manifest_version": 2,
    "name": "Dark Chrome",
    "version": "0.1",
    "description": "Extension to swtich to dark mode on any website!!",
    "icons":{
        "128":  "icons/128.png",
        "48":   "icons/48.png",
        "16":   "icons/16.png"
    },
    "browser_action":{
        "default_icon": "icons/16.png",
        "default_title":   "Press Ctrl+Alt+D to toggle between modes."
    },
    "content_scripts":  [{
       "css": ["styles.css"],
       "js":  ["script.js"],
       "matches": ["<all_urls>"] 
    }]
}